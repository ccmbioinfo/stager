  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "0.0.0.0",
      "module": "flask",
      "env": {
        "FLASK_APP": "/usr/src/stager/wsgi.py",
        "FLASK_ENV": "development"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/usr/src/stager"
        }
      ],
      "args": [
        "run",
        "--no-debugger"
      ],
      "jinja": false
    }
  ]
}
